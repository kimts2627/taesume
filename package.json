    "eslint-plugin-jsx-a11y": "6.5.1",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-react": "7.29.4",
    "eslint-plugin-react-hooks": "4.4.0",
    "postcss": "^8.4.14",
    "prettier": "2.6.2",
    "tailwindcss": "^3.1.4",
    "typescript": "^4.6.4"
  },
  "engines": {
    "node": ">=14"
  }
